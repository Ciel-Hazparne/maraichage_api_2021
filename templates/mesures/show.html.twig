{% extends 'base.html.twig' %}

{% block title %}Mesures{% endblock %}

{% block body %}
    <div class="container"><br>
        <h1>Mesures :</h1>

        <table class="table table-dark">
            <tbody>
            <tr>
                <th><h5 class="text-warning">Identifiant</h5></th>
                <td class="text-light">{{ mesure.id }}</td>
            </tr>
            <tr>
                <th class="text-warning">Libelle</th>
                <td class="text-light">{{ mesure.libelle }}</td>
            </tr>
            <tr>
                <th class="text-warning">Valeur</th>
                <td class="text-light">{{ mesure.valeur }}</td>
            </tr>
            <tr>
                <th class="text-warning">Heure</th>
                <td class="text-light">{{ mesure.createdAt ? mesure.createdAt|date('Y-m-d H:i') : '' }}</td>
            </tr>
            </tbody>
        </table>
        <div class="container">
            <div class="row ">
                <button type="button" class="btn btn-info "><a style="color: #fbfcfc" href="{{ path('mesures_index') }}">back to list</a></button>
                <br>
                <button type="button" class="btn btn-warning"><a style="color: #fbfcfc" href="{{ path('mesures_edit', {'id': mesure.id}) }}">edit</a></button>

                {{ include('mesures/_delete_form.html.twig') }}</div></div>
    </div>
{% endblock %}
